<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Sửa Tên Người Dùng"
        android:background="#FFC107"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName: "/>
        <EditText
            android:layout_marginLeft="24dp"
            android:textColor="@color/black"
            android:id="@+id/ed_TaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="matKhau"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Ng Dùng: "/>
        <EditText
            android:textColor="@color/black"
            android:id="@+id/ed_tenNgDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên người dùng"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PassWord: "/>
        <EditText
            android:enabled="false"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:id="@+id/ed_MatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tai Khoản"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textColor="@color/white"
            android:backgroundTint="#FFC107"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/btn_XoaThuThu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Xóa"/>
        <Button
            android:textColor="@color/white"
            android:backgroundTint="#FFC107"
            android:layout_marginRight="20dp"
            android:id="@+id/btn_SuaThuThu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cập Nhật"/>
    </LinearLayout>
</LinearLayout>